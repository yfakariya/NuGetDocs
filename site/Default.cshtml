@using Docs.Core
@{ Page.Title = "NuGet Docs"; }

<h1>Welcome to NuGet Docs</h1>

<p>
    NuGet is a Visual Studio extension that makes it easy to add, remove, and update 
    libraries and tools in Visual Studio projects that use the .NET Framework. This topic 
    lists documentation that will help you use NuGet packages and create your own.
</p>

<ol class="topics">
    @foreach (var topic in Topic.GetTopics("~/docs")) {
        <li class="topic">
        <h2>@topic.Title</h2>
        @if (topic.SubTopics.Any()) {
            <ol class="subTopics">
                @foreach (var subTopic in topic.SubTopics) {
                    <li class="subTopic"><h3><a href="@subTopic.Url">@subTopic.Title</a></h3></li>
                }
            </ol>
        }
        </li>
    }
</ol>